
@model BeerPack.Models.Ales
@{
    ViewBag.Title = "Ales";
}
<div class="row">
    <div class="col-xs-12 col-sm-4">
        <div class="img-circle img-responsive" src="@Model.Image" />
    </div>
    <div class="col-xs-12 col-sm-8">
        <div class="well">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <p>@Model.Price.ToString("C")</p>
        </div>
    </div>
</div>


