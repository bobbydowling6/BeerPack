
@model IEnumerable<BeerPack.Models.Ales>
@{
    ViewBag.Title = "List";
}

<h2>Ales</h2>
<div class="jumbotron">
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-xs-4">
                    <div class="well">
                        <h2>@product.Name</h2>
                        <img class="img-circle img-responsive" src="@product.Image" />
                        <p>@product.Description</p>
                        <p>@product.Price.ToString("C")</p>
                        <input type="submit" class="btn btn-default" value="Add to Cart" />

                    </div>
                    @Html.ActionLink("Beer", "Index", "Ales", new { ID = product.ID })
                </div>
            }
        </div>
    </div>
</div>