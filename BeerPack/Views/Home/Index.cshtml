@{
    ViewBag.Title = "Home Page";
}
<main>
    <div class="jumbotron">
        <div class="container">
            <div class="col-xs-8">
                <h1>Welcome to BeerPack!</h1>
                <p>We're Chicagoland's fastest growing e-commerce website in selling high quality beer to new
                    Beer Enthusiasts that want to try something outside of the box. We have highly trained enthusiasts and professionals dedicated to supporting and promoting better beer quality.
                    We hope that you enjoy your shopping experience with us!</p>
                <p style="text-decoration-line:underline">Here's our most popular items on BeerPack!</p>
            </div>
           <div class="col-xs-4">
                <a class="img-thumbnail"><img src="~/images/BeerPack.jpg" style="border:groove" /></a>
           </div>
            <p><small>Company Logo</small></p>
            <br />
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="3" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="4" class="active"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img class="first-slide" src="~/images/Ales/gooseisland312.png" alt="First Slide " />
                        <div class="container">
                            <div class="carousel-caption">
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="second-slide" src="~/images/BeerBaskets/IPABasket.jpg" alt="Second slide" />
                        <div class="container">
                            <div class="carousel-caption">
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="third-slide" src="~/images/Lagers/guinness-guinness-hop-house-13-lager_1478111845.png" alt="Third slide" />
                        <div class="container">
                            <div class="carousel-caption">
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="fourth-slide" src="~/images/BeerBaskets/craftbeerbasket.jpg" alt="Fourth slide" />
                        <div class="container">
                            <div class="carousel-caption">
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="fifth-slide" src="~/images/Lagers/yuengling-lager-btl-single.png" alt="Fifth slide" />
                        <div class="container">
                            <div class="carousel-caption">
                            </div>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <footer>
        <div class="jumbotron">
            <small><i>Copyright &copy; 2018 Beer Pack</i></small>
            <br>
        </div>
    </footer>
</main>